{% extends "ClarolineCoreBundle:Administration\\Facet:facetModalForm.html.twig" %}

{% block header %}
    {{ 'edit_panel_facet'|trans({}, 'platform') }}
{% endblock %}

{% block form %}
    <form role="form" class="form-horizontal" action="{{ path('claro_admin_panel_facet_edit', {'panelFacet': panelFacet.getId()}) }}" method="post" {{ form_enctype(form) }} id="form_facet_panel_edit">
        <div class="modal-body">
            {{ form_widget(form) }}
        </div>
        <div class="modal-footer">
            <button id="submit-facet-panel-edit-form" class="btn btn-primary" aria-hidden="true">{{ 'edit'|trans({}, 'platform') }}</button>
            <div class="btn btn-default" data-dismiss="modal" aria-hidden="true">{{ 'cancel'|trans({}, 'platform') }}</div>
        </div>
    </form>
{% endblock %}
